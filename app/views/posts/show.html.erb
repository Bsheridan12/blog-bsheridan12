

<h1><%= @post.title %></h1>
<h4>Author: <%= @post.blog.author.username %></h4>

<p><%= @post.body %></p>

<div id="comment_section">
  <h3>Comments:</h3>
  <% @post.comments.each do |comment| %>
    <div class="comment">
    <h4><%= comment.commenter.username %>:</h4>
    <p><%= comment.body %></p>
    </div>
  <% end %>
</div>
